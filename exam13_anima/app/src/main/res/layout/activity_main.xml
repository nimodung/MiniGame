<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back_ground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/img_cloud1"
        android:layout_width="88dp"
        android:layout_height="60dp"
        app:srcCompat="@mipmap/c4" />

    <ImageView
        android:id="@+id/img_cloud2"
        android:layout_width="113dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/c5" />

    <ImageView
        android:id="@+id/img_cloud3"
        android:layout_width="235dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        app:srcCompat="@mipmap/cl1" />

    <ImageView
        android:id="@+id/img_pig1"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        app:srcCompat="@mipmap/pig1" />

    <ImageView
        android:id="@+id/img_pig2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:visibility="invisible"
        app:srcCompat="@mipmap/pig2" />

    <ImageButton
        android:id="@+id/btn_mole"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="40dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:srcCompat="@mipmap/mole2" />

    <ImageButton
        android:id="@+id/btn_card"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="right"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="40dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:srcCompat="@mipmap/card_background" />

</FrameLayout>